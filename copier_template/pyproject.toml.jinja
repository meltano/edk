[tool.poetry]
name = "{{extension_id}}"
version = "0.0.1"
description = "`{{extension_id}}` is a Meltano utility extension."
authors = ["{{ admin_name }}"]
license = "Apache 2.0"

[tool.poetry.dependencies]
python = "<3.11,>=3.7"
structlog = "^21.2.0"
PyYAML = "^6.0.0"
pydantic = "^1.9.0"
click = "^8.1.3"
typer = "^0.6.1"
"meltano.edk"= {git = "https://github.com/meltano/edk.git", rev="main"}

[tool.poetry.dev-dependencies]
black = "^22.3.0"
isort = "^5.10.1"
flake8 = "^3.9.0"

[build-system]
requires = ["poetry-core>=1.0.8"]
build-backend = "poetry.core.masonry.api"

packages = [
    { include = "{{library_name}}" }
    # uncomment this if you want to include static assets
    # { include = "files_{{extension_id}}.*" }
]

# If you need to static assets with your extension, you can add them here.
# Under a directory path of "files_{{extension_id}}/"
#include = [
#    "files_{{extension_id}}/somefile.thing"
#]

[tool.poetry.scripts]
{{cli_prefix}}_extension = '{{library_name}}.main:app'
{{cli_prefix}}_invoker = '{{library_name}}.pass_through:pass_through_cli'
